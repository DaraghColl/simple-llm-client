{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2015",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@components/*": ["./src/frontend/components/*"],
      "@state/*": ["./src/frontend/state/*"],
      "@composables/*": ["./src/frontend/composables/*"],

      "@frontend/*": ["./src/frontend/*"],
      "@backend/*": ["./src/backend/*"]
    }
  }
}
